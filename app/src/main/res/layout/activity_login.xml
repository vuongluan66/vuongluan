<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">


    <ImageView
        android:id="@+id/im_logo_vector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="156dp"
        android:src="@drawable/ic_logo" />

    <EditText
        android:id="@+id/edt_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_logo_vector"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/edt_background"
        android:hint="@string/username"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textAppearance="@style/username" />

    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_username"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edt_background"
        android:hint="@string/password"
        android:inputType="text"
        android:minHeight="48dp"
        android:paddingLeft="10dp"
        android:textAppearance="@style/password" />

    <TextView
        android:id="@+id/tv_forgot_pass"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/edt_password"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="36dp"
        android:background="@color/white"
        android:fontFamily="@font/roboto"
        android:text="@string/forgot_pass"
        android:textAllCaps="false" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_login"
        android:layout_width="148dp"
        android:layout_height="48dp"
        android:layout_below="@id/tv_forgot_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/get_start"
        android:fontFamily="@font/roboto"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/do_not_have_acc"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto"
        android:text="@string/sign_up"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/tv_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/do_not_have_acc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/roboto"
        android:text="@string/or"
        android:textAppearance="@style/or" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/tv_or"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/btn_google"
            android:background="@null"
            android:layout_marginRight="36dp"
            android:src="@drawable/ic_google"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/btn_flickr"
            android:background="@null"
            android:src="@drawable/ic_flickr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:background="@null"
            android:src="@drawable/ic_facebook"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>

</RelativeLayout>